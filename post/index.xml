      &lt;img itemprop=&#34;thumbnail&#34; src=&#34;https://www.xianmin.org/image/memory/2021/01.jpg&#34; /&gt;
    &lt;/div&gt;
    &lt;a href=&#34;https://www.xianmin.org/image/memory/2021/01.jpg&#34; itemprop=&#34;contentUrl&#34;&gt;&lt;/a&gt;
  &lt;/figure&gt;
